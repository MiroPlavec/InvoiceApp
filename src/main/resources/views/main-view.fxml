<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cevalp.invoiceapp.controllers.MainViewController"
      stylesheets="@../styles/main-view.css"
      alignment="CENTER"
      spacing="50">

    <Label text="Faktúrovač" styleClass="main-label"/>

    <VBox alignment="CENTER" spacing="10">
        <Button text="Vytvoriť faktúru" onAction="#createInvoice"/>
        <Button text="Pridať dodávateľa" onAction="#addSender"/>
        <Button text="Pridať príjemcu" onAction="#addRecipient"/>
    </VBox>

</VBox>
